{
    "compilerOptions": {
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2018",
        "lib": [
            "es2018",
            "dom"
        ],
        "rootDir": "src",
        "outDir": "dist",
        "jsx": "react",
        "allowJs": false,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "types": [
            "jest",
            "node",
            "lodash",
            "prop-types",
            "angular",
            "styled-components",
            "react",
            "react-dom",
        ],
    }
}